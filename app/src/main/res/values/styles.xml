<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- =============================================================== -->
    <!-- Light-Theme-styles -->
    <!-- =============================================================== -->

    <style name="title_post_light">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="description_post_light">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="time_post_light">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="comments_post_light">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="background_post_light">
        <item name="android:background">@drawable/background_post_shadow</item>
    </style>
    <style name="recyclerview_post_light">
    <item name="android:background">@color/white</item>
    </style>
    <style name="toolbar_light">
        <item name="android:background">@color/white</item>
    </style>
    <style name="toolbar_logo_light">
        <item name="android:tint">@color/black</item>
    </style>
    <style name="navigationview_light" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/black</item>
    </style>
    <style name="icons_light" >
        <item name="android:tint">@color/yellow</item>
    </style>
    <style name="tablayout_light" >
        <item name="android:background">@color/bbc</item>
    </style>




