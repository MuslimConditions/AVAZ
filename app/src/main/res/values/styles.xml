<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>



    <!-- =============================================================== -->
    <!-- Light-Theme-styles -->
    <!-- =============================================================== -->

    <style name="title_post_light">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="description_post_light">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="time_post_light">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="comments_post_light">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="background_post_light">
        <item name="android:background">@color/white</item>
    </style>
    <style name="recyclerview_post_light">
    <item name="android:background">@color/white</item>
    </style>
    <style name="toolbar_light">
        <item name="android:background">@color/white</item>
    </style>
    <style name="toolbar_logo_light">
        <item name="android:tint">@color/black</item>
    </style>
    <!-- =============================================================== -->
    <!-- Dark-Theme-styles -->
    <!-- =============================================================== -->
    <style name="title_post_dark">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="description_post_dark">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="time_post_dark">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="comments_post_dark">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="background_post_dark">
        <item name="android:background">@color/white</item>
    </style>
    <style name="recyclerview_post_dark">
        <item name="android:background">@color/white</item>
    </style>
    <style name="toolbar_dark">
        <item name="android:background">@color/white</item>
    </style>
    <style name="toolbar_logo_dark">
        <item name="android:tint">@color/black</item>
    </style>


</resources>
